{{#each blogPosts as |blogPost| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      

      <a href="/post/{{blogPost.user_id}}">
        {{blogPost.title}}
      </a>
    </h2>

    <p>Created by {{user.user_name}} on {{format_date blogPost.upload_date}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogPost.description}}
    </p>
  </div>
</div>
{{/each}}