<div class="row my-4">
    <div class="col post-item">
        <div class="custom-card">
            <div class="bg-dark text-light p-2 d-flex justify-content-between">
                <h3>{{title}}</h3>

                <div>
                    <em class="lead text-secondary fs-6 me-1"></em>

                </div>

                <em class="my-auto">{{format_date upload_date}}</em>

            </div>
            <div class="px-2 pt-2 my-1 d-flex justify-content-between">
                <div>
                    <h5 class="lead">{{description}}</h5>
                    <p class="blockquote-footer custom-at mt-1">@{{user.user_name}}</p>
                </div>

                <div>
                    {{#each comments}}
                    <div class="row my-4">
                        <div class="col-6">
                            <div class="custom-card">
                                <div class="mb-1 p-2 d-flex justify-content-between">
                                    <h5 class="lead">{{description}}</h5>
                                    <em><small class="text-secondary">{{format_date upload_date}}</small></em>
                                </div>
                                <div class="px-2 d-flex justify-content-between">
                                    <p class="blockquote-footer custom-at"> @{{user.user_name}}</p>
                                    <button id="delete-comment" class="btn btn-secondary btn-edit me-2 mt-2"
                                        data-id="{{id}}" data-bs-toggle="modal" data-bs-target="#exampleModal"> Delete
                                        Comment</button>

                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <form class="form new-project-form">
                    <div class="form-group">
                        <label for="project-name">Leave a Comment: </label>
                        <input value="" class="form-input" type="text" id="comment" name="project-name" />

                        <button id="add-comment" class="btn btn-secondary btn-edit me-2 mt-2" data-id="{{id}}"
                            data-bs-toggle="modal" data-bs-target="#exampleModal">Comment</button>



                    </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/comment.js"></script>